.background-white {
    -fx-background-color: white;
}

.sidebar {
    -fx-background-color: #16313e;
}

.btn-danger {
    -fx-background-color: #c13d36;
}
.btn-success {
    -fx-background-color: #1DB954;
}
.btn-primary {
    -fx-background-color: lightskyblue;
}
.btn-info {
    -fx-background-color:  #1a7499;
}
.hover-hand {
    -fx-cursor: hand;
}
.productName {
    -fx-font-size: 17;
    -fx-text-fill:#5d5d5d;
}
.productName:hover,.categoryName:hover {
    -fx-text-fill:#6ac2ee;
    -fx-font-weight: 400;
}
.price {
    -fx-font-size: 15;
    -fx-text-fill:#3b71b8;
}
.gpProductsList{
    -fx-vgap: 30;
    -fx-hgap: 10;
}
.categoryName{
    -fx-font-size: 15;
}
.hover-shadow:hover{
    -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.8), 5, 0,0,0);
}
.cart-cell {
    -fx-alignment: CENTER_LEFT;
    -fx-border-color: #eee;
    -fx-font-size: 15;
    -fx-padding: 0 0 0 20;
}
.txt-grey {
    -fx-text-fill: #747474;    
}
.txt-ocean-blue {
    -fx-text-fill: #3B71B4;
}
.txt-bold {
    -fx-font-weight: bold;
}